{{#if parameter}}
<div class="pokemon-card-container" data-forsaleid={{'forsales.id'}}>
{{else}}
<div class="pokemon-card-container">
{{/if}}
  <div class="pokemon-card-image">
    {{#if parameter}}
      <img src="{{'forsales.post.pokemon_image'}}" alt="{{name}}" class="pokemon-card-img">
    {{else}}
      <img src="{{'fortrades.post.pokemon_image'}}" alt="{{name}}" class="pokemon-card-img">
    {{/if}}
    
  </div>
  <div class="pokemon-card-details">
    {{#if parameter}}
    <h3>{{name}}'s <span style="font-weight: bolder;">{{'forsales.post.pokemon'}}</span></h3>
    {{!-- <p>Type: {{type}}</p>
    <p>HP: {{hp}}</p> --}}
    <p>Condition: <span class="cond">{{'forsales.post.condition'}}</span></p>
    <p>Price: ${{'forsales.post.price'}}</p>
    <p>Likes: <span class="likes">{{'forsales.post.likes'}}</span></p>
    {{else}}
    <h3>{{name}}'s <span style="font-weight: bolder;">{{'fortrades.post.pokemon'}}</span></h3>
    {{!-- <p>Type: {{type}}</p>
    <p>HP: {{hp}}</p> --}}
    <p>Condition: <span class="cond">{{'fortrades.post.condition'}}</span></p>
    <p>Price: ${{'fortrades.post.price'}}</p>
    <p>Likes: <span class="likes">{{'fortrades.post.likes'}}</span></p>
    {{/if}}
    
    {{#if parameter}}
      <button id="buy" class="buy-button">Buy</button>
    {{else}}
    <a href="/card/{{'fortrades.post.id'}}"><button class="trade-button">Trade</button></a>
      
    {{/if}}
    <button class="add-to-collection-button">Add to Collection</button>
  </div>
</div>